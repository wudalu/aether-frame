# Environment Configuration Template
# Copy this file to .env and customize the values

# Application Settings
APP_NAME=aether-frame
APP_VERSION=0.1.0
ENVIRONMENT=development
DEBUG=true

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE_PATH=logs/aether-frame.log

# Framework Settings
DEFAULT_FRAMEWORK=adk
ENABLE_FRAMEWORK_SWITCHING=true

# ADK Configuration
ADK_PROJECT_ID=your-gcp-project-id
ADK_LOCATION=us-central1
ADK_CREDENTIALS_PATH=/path/to/service-account.json

# AutoGen Configuration
AUTOGEN_MODEL_NAME=gpt-4
AUTOGEN_MAX_TOKENS=4096

# LangGraph Configuration
LANGGRAPH_MEMORY_TYPE=postgres
LANGGRAPH_CHECKPOINT_BACKEND=postgres

# LLM Provider Settings
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=4096
OPENAI_TEMPERATURE=0.7

ANTHROPIC_API_KEY=your-anthropic-api-key
ANTHROPIC_MODEL=claude-3-sonnet-20240229
ANTHROPIC_MAX_TOKENS=4096

# DeepSeek Configuration
DEEPSEEK_API_KEY=your-deepseek-api-key
DEEPSEEK_MODEL=deepseek-chat
DEEPSEEK_BASE_URL=https://api.deepseek.com/v1
DEEPSEEK_MAX_TOKENS=4096
DEEPSEEK_TEMPERATURE=0.7

# Azure OpenAI Configuration - Using LiteLLM standard environment variable names
AZURE_API_KEY=your-azure-openai-api-key
AZURE_API_BASE=https://your-resource.openai.azure.com/
AZURE_API_VERSION=2023-07-01-preview

# Google AI/Vertex AI Configuration
GOOGLE_AI_API_KEY=your-google-ai-api-key
VERTEX_AI_PROJECT_ID=your-gcp-project-id
VERTEX_AI_LOCATION=us-central1
VERTEX_AI_MODEL=gemini-pro

# Default model configuration for ADK
DEFAULT_MODEL_PROVIDER=deepseek
DEFAULT_MODEL=deepseek-chat

# Memory & Storage Configuration
MEMORY_BACKEND=redis
REDIS_URL=redis://localhost:6379
REDIS_DB=0
REDIS_PASSWORD=

POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=aether_user
POSTGRES_PASSWORD=aether_password
POSTGRES_DATABASE=aether_frame

# Session Management
SESSION_TIMEOUT=3600
SESSION_STORAGE=redis

# Tool Configuration
SEARCH_ENGINE=google
GOOGLE_SEARCH_API_KEY=your-google-search-api-key
GOOGLE_SEARCH_CX=your-google-search-cx

# Observability Settings
ENABLE_METRICS=true
ENABLE_TRACING=true
PROMETHEUS_PORT=9090
JAEGER_ENDPOINT=http://localhost:14268/api/traces
AETHER_ENABLE_EXECUTION_LOGS=1
AETHER_METRICS_BACKEND=none  # options: none, prometheus
AETHER_PROMETHEUS_PORT=9400

# Security Settings
SECRET_KEY=your-secret-key-here
API_KEY_HEADER=X-API-Key
CORS_ORIGINS=["http://localhost:3000"]

# Performance Settings
MAX_CONCURRENT_TASKS=10
TASK_TIMEOUT=300
MEMORY_LIMIT_MB=1024

# Development Settings
RELOAD_ON_CHANGE=true
PROFILING_ENABLED=false
