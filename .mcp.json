{
  "mcpServers": {
    "context7": {
      "command": "npx",
      "args": ["-y", "@upstash/context7-mcp@latest"]
    },
    "deepwiki": {
      "command": "npx",
      "args": ["-y", "@deepwiki/mcp-server@latest"],
      "env": {
        "DEEPWIKI_MCP_URL": "https://mcp.deepwiki.com/mcp"
      }
    },
    "duckduckgo-search": {
      "command": "uvx",
      "args": ["duckduckgo-mcp-server"]
    },
    "sequential-thinking": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-sequential-thinking"]
    }
  }
}